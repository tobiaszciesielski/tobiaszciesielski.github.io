---
interface Props {
  title: string
}

const { title } = Astro.props

const currentPath = Astro.url.pathname
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="max-w-[700px] p-4 mx-auto font-body bg-slate-950 text-slate-50">
    <nav class="mb-10">
      <div class="flex justify-between">
        <a href="/">
          <div class="flex flex-col">
            <h1 class="text-lg font-bold -mb-1">Tobiasz Ciesielski</h1>
            <p class="text-sm">Front-end Developer</p>
          </div>
        </a>

        <ul class="flex gap-5">
          <a
            href="/"
            class={currentPath === '/' ? 'underline' : 'hover:underline'}
          >
            <li>Home</li>
          </a>

          <a
            href="/blog"
            class={currentPath === '/blog' ? 'underline' : 'hover:underline'}
          >
            <li>Blog</li>
          </a>

          <a
            href="/talks"
            class={currentPath === '/talks' ? 'underline' : 'hover:underline'}
          >
            <li>Talks</li>
          </a>

          <a
            href="/snippets"
            class={currentPath === '/snippets'
              ? 'underline'
              : 'hover:underline'}
          >
            <li>Snippets</li>
          </a>
        </ul>
      </div>
    </nav>

    <main>
      <slot />
    </main>
  </body>
</html>
